<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:id="@+id/caratula"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textStyle="bold"
        android:layout_toRightOf="@id/caratula"
        android:layout_alignTop="@id/caratula"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_marginLeft="16dp"
        android:id="@+id/tituloTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artista"
        android:layout_toRightOf="@id/caratula"
        android:layout_alignBottom="@id/caratula"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:id="@+id/artistaTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="$20.00"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:id="@+id/precioTextView"/>

</RelativeLayout>