<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"


    >

    <ImageView
        android:id="@+id/imagen_feder_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:scaleType="centerCrop"
        android:src="@drawable/feder_02" />

    <ImageView
        android:id="@+id/imagen_feder"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:src="@drawable/feder"
        android:layout_marginTop="-70dp"
        />




    <Button
        android:id="@+id/boton_before"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="left|bottom"
        android:text=""
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/before"
        />


    <Button
        android:id="@+id/boton_next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|bottom"
        android:text=""
        android:layout_marginBottom="60dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/next"
        />




    <Button
        android:id="@+id/boton_like_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="left|bottom"
        android:text=""
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/like_3"
        />


    <Button
        android:id="@+id/boton_like_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|bottom"
        android:text=""
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/like_1"
        />






    <ImageView
        android:id="@+id/imagen_clara"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:src="@drawable/feder"
        android:layout_marginTop="-70dp"
        />

    <Button
        android:id="@+id/boton_pausaR"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:text=""
        android:src="@drawable/feder"
        android:layout_marginBottom="40dp"
        android:background="@drawable/pausaR"
        />





    <Button
        android:id="@+id/boton_next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|bottom"
        android:text=""
        android:layout_marginBottom="60dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/next"
        />




    <Button
        android:id="@+id/flecha_1"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_gravity="left|top"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/flecha_1"
        />


    <Button
        android:id="@+id/boton_main_Hamburguesa"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|top"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/main_Hamburguesa_1"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/subtitulo"
        android:layout_gravity="center|bottom"
        android:text="Feder"
        android:textColor="#ffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_button"
        android:layout_marginBottom="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_gravity="center|bottom"
        android:text="Lordly (feat. Alex Aiono) [Remix EP]"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_button"
        android:layout_marginBottom="160dp" />

    <Button
        android:id="@+id/linea"
        android:layout_width="260dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal|bottom"
        android:text=""
        android:src="@drawable/feder"
        android:layout_marginBottom="110dp"
        android:background="@drawable/linea2"
        />


    <Button
        android:id="@+id/plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="left|bottom"
        android:text=""
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/plus88"
        />


    <Button
        android:id="@+id/puntos"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|bottom"
        android:text=""
        android:layout_marginBottom="130dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/puntos60"
        />



</FrameLayout>